# ============================================================================
# SUNA FRONTEND - DEFAULT CONFIGURATION
# ============================================================================
# This file contains sensible defaults for local development.
# Copy to .env.local and customize as needed.
# ============================================================================

# Environment mode
NEXT_PUBLIC_ENV_MODE="local"

# Supabase connection (REQUIRED)
# Get these from your Supabase project settings
# For local Supabase: http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_URL=""
NEXT_PUBLIC_SUPABASE_ANON_KEY=""

# Backend API URL (default for local development)
NEXT_PUBLIC_BACKEND_URL="http://localhost:8000/api"

# Frontend URL (default for local development)
NEXT_PUBLIC_URL="http://localhost:3000"

# Optional: Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=""

# Optional: Analytics
NEXT_PUBLIC_POSTHOG_KEY=""

# Admin API key (should match backend)
KORTIX_ADMIN_API_KEY=""

# Optional: Vercel Edge Config
EDGE_CONFIG=""
